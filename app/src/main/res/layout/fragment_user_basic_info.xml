<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.chhavi.pickzie.Fragment.UserBasicInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="25sp"
            android:background="#1A237E"
            android:textStyle="bold"
            android:text="BASIC INFO"
            android:textColor="#FFFFFF"
            android:id="@+id/header" />
        <ImageView
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/a"
            android:elevation="10dp"
            android:layout_below="@id/header"
            android:id="@+id/profilepic"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"
            android:layout_height="150dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@id/profilepic"
            android:text="Name : Aabha Sharma"
            android:id="@+id/a"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@id/a"
            android:text="Sex : Female"
            android:id="@+id/b"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@id/b"
            android:text="Contact no. : 9896675433"
            android:id="@+id/c"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@id/c"
            android:text="Address : 3/1144, abc  appt, vaishali"
            android:id="@+id/d"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@id/d"
            android:text="Email : xat@gmail.com"
            android:id="@+id/e"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>
</FrameLayout>
